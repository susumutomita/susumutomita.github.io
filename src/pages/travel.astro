---
import Globe from "../components/Globe";
import BaseLayout from "../layouts/BaseLayout.astro";
---

<BaseLayout
  title="Visited Countries - Susumu Tomita"
  description="A 3D globe showing countries that I have visited so far"
  ogImage="/globe_preview.webp"
>
  <div class="relative min-h-[calc(100vh-200px)] flex flex-col items-center justify-center">
    <div class="text-center mb-8">
      <h1 class="font-display text-3xl md:text-4xl font-bold mb-4">Countries I've Visited</h1>
      <p class="text-light-muted dark:text-dark-muted">
        Explore the globe to see the countries I've traveled to
      </p>
    </div>
    <div class="w-full max-w-4xl aspect-square">
      <Globe client:load />
    </div>
  </div>
</BaseLayout>
