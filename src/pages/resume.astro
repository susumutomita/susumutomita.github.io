---
import BaseLayout from "../layouts/BaseLayout.astro";
import { LINKS } from "../lib/constants";

const experiences = [
  {
    company: "DENSO Corporation",
    role: "Agile Coach (Contract)",
    period: "2025.1 - Present",
    location: "Japan",
    highlights: [
      "Supporting agile transformation and engineering culture improvement across development teams",
      "Coaching teams on Scrum, Kanban, and DevOps practices",
      "Facilitating retrospectives and continuous improvement initiatives",
    ],
    tech: ["Scrum", "Kanban", "DevOps", "Agile Coaching"],
  },
  {
    company: "DENSO Corporation",
    role: "Software Architect / Cloud Lead Engineer",
    period: "2018.10 - 2024.12",
    location: "Japan",
    highlights: [
      "First certified Cloud/IT Software Architect under DENSO's \"Software Sommelier\" program",
      "Designed and operated AWS infrastructure for large-scale IoT services (mobi-Crews, Drive Agent Personal) managing 100K-1M devices",
      "Built Mac security environment using Jamf Pro, Okta, Druva, and Microsoft Defender",
      "Developed internal AWS GameDay training platform for security and cloud education",
      "Founded Cloud Tech Friends (CCoE) community with 2,000+ engineers across DENSO Group",
      "Established hiring processes and technical assessment criteria for cloud engineers, SREs, and architects",
    ],
    tech: ["AWS", "Terraform", "Ruby on Rails", "Python", "Go", "TypeScript", "Docker", "GitHub Actions"],
  },
  {
    company: "Logomix Inc.",
    role: "Software Engineer (Lab Automation / SRE)",
    period: "2025.6 - Present",
    location: "Remote (Freelance)",
    highlights: [
      "Building fully automated iPS cell cultivation system for regenerative medicine research",
      "Integrating Hamilton STAR liquid handling robots with incubators and observation devices",
      "Implementing SRE practices: monitoring, incident response, and postmortem culture",
    ],
    tech: ["Python", "HSL", "AWS", "Terraform", "GitHub Actions"],
  },
  {
    company: "MynaWallet Inc.",
    role: "Software Engineer (Web3 / Infrastructure)",
    period: "2025.8 - Present",
    location: "Remote (Freelance)",
    highlights: [
      "Infrastructure design and security audit support for Web3 wallet using Japan's JPKI (Public Key Infrastructure)",
      "Built cloud architecture for cryptographic signing, authentication, and CRL/OCSP verification",
      "Implemented workflow automation with AWS Step Functions and ECS for signature request processing",
      "Led JPKI certification audit preparation and ISMS/key management compliance",
    ],
    tech: ["TypeScript", "AWS CDK", "ECS", "Step Functions", "Lambda", "Aurora", "Docker"],
  },
  {
    company: "WHILL Inc.",
    role: "Software Engineer (Mobility Platform)",
    period: "2021.9 - 2022.4",
    location: "Remote (Freelance)",
    highlights: [
      "Developed cloud application for wheelchair sharing service",
      "Built real-time data pipeline from wheelchairs to cloud using SORACOM Beam and AWS Lambda",
      "Created GraphQL API with AWS AppSync for real-time wheelchair status monitoring",
      "Prototyped wheelchair-elevator integration with OTIS systems",
    ],
    tech: ["TypeScript", "Express", "AWS AppSync", "DynamoDB", "AWS CDK", "SORACOM"],
  },
  {
    company: "Hitachi Vantara",
    role: "Specialist Software QA / Automation Engineer",
    period: "2017.2 - 2018.8",
    location: "Japan / US (Santa Clara, Seattle, Boston, Denver)",
    highlights: [
      "QA and test automation for Lumada IoT platform",
      "Designed test plans and automation frameworks for data visualization modules",
      "Led proof-of-concept connecting Lumada with Hitachi industrial printers",
      "Contributed to establishing development culture and software processes from project inception",
    ],
    tech: ["Java", "TestNG", "Selenium", "REST Assured", "Jenkins", "GitLab CI"],
  },
  {
    company: "Hitachi, Ltd.",
    role: "QA Engineer / Technical Lead",
    period: "2006.4 - 2017.1",
    location: "Japan / US",
    highlights: [
      "QA for JP1 Performance Management (server monitoring software) used in mission-critical systems (banking ATMs, railway IC cards, stock trading)",
      "Principal QA Engineer at Hitachi Data Systems for storage management software (80%+ test automation)",
      "Led Japan-side development and QA teams for UCP Director (unified infrastructure product) with US teams",
      "Established QA processes and test automation frameworks from scratch",
    ],
    tech: ["Java", "JUnit", "Silk Test", "Jenkins", "Visual Studio", "Git", "SVN"],
  },
];

const skills = {
  "Cloud & Infrastructure": {
    items: ["AWS", "GCP", "Azure", "Terraform", "AWS CDK", "Docker", "Kubernetes"],
    years: "7+",
  },
  "Programming Languages": {
    items: ["Python", "TypeScript", "Go", "Ruby", "Solidity", "Cairo"],
    years: "8+",
  },
  "CI/CD & DevOps": {
    items: ["GitHub Actions", "GitLab CI", "CircleCI", "Jenkins", "Bitbucket Pipelines"],
    years: "7+",
  },
  "Security": {
    items: ["IAM", "SSO (Okta)", "JPKI", "Zero Trust Architecture", "Security Audits"],
    years: "5+",
  },
  "QA & Test Automation": {
    items: ["JUnit", "Selenium", "TestNG", "REST Assured", "Test Planning"],
    years: "12+",
  },
  "AI & Tools": {
    items: ["Claude", "ChatGPT", "Amazon Q", "Amazon Bedrock", "Slack Automation"],
    years: "2+",
  },
};

const certifications = [
  { name: "AWS Solutions Architect", issuer: "Amazon Web Services" },
];

const achievements = [
  "First Cloud/IT Software Architect at DENSO (Software Sommelier Program)",
  "Founded Cloud Tech Friends community (2,000+ engineers)",
  "Built AWS GameDay training platform adopted company-wide",
  "Published research on ZeroKey authentication system",
];
---

<BaseLayout
  title="Resume - Susumu Tomita"
  description="Professional resume of Susumu Tomita - Software Architect & Cloud Engineer"
>
  <div class="max-w-5xl mx-auto px-4 sm:px-6 lg:px-8 py-16 md:py-24">
    <!-- Header -->
    <div class="mb-16 flex flex-wrap items-start justify-between gap-6">
      <div>
        <h1 class="font-display text-4xl md:text-5xl font-bold mb-4">Susumu Tomita</h1>
        <p class="text-xl text-accent-500 font-medium mb-4">
          Software Architect / Cloud Lead Engineer
        </p>
        <p class="text-light-muted dark:text-dark-muted max-w-2xl leading-relaxed">
          Building secure, scalable systems and engineering culture.
          From QA automation to cloud architecture, from startups to enterprise.
          Specializing in AWS, IoT, Web3, and developer experience.
        </p>
      </div>
      <div class="flex gap-3">
        <a
          href={LINKS.linkedin}
          target="_blank"
          rel="noopener noreferrer"
          class="inline-flex items-center gap-2 px-4 py-2 border border-light-border dark:border-dark-border hover:border-accent-500 dark:hover:border-accent-500 rounded-lg transition-colors"
        >
          <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
            <path
              d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"
            ></path>
          </svg>
          LinkedIn
        </a>
        <a
          href={LINKS.github}
          target="_blank"
          rel="noopener noreferrer"
          class="inline-flex items-center gap-2 px-4 py-2 border border-light-border dark:border-dark-border hover:border-accent-500 dark:hover:border-accent-500 rounded-lg transition-colors"
        >
          <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
            <path
              fill-rule="evenodd"
              d="M12 2C6.477 2 2 6.484 2 12.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0112 6.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.202 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.943.359.309.678.92.678 1.855 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0022 12.017C22 6.484 17.522 2 12 2z"
              clip-rule="evenodd"></path>
          </svg>
          GitHub
        </a>
        <a
          href={LINKS.zenn}
          target="_blank"
          rel="noopener noreferrer"
          class="inline-flex items-center gap-2 px-4 py-2 border border-light-border dark:border-dark-border hover:border-accent-500 dark:hover:border-accent-500 rounded-lg transition-colors"
        >
          <svg class="w-5 h-5" viewBox="0 0 88.3 88.3" fill="currentColor">
            <path d="M2.4 83.3h17c.9 0 1.7-.5 2.2-1.2L68.4 5.2c.6-1-.1-2.2-1.3-2.2H51.6c-.8 0-1.5.4-1.9 1.1L2.1 81.5c-.4.8.1 1.8 1 1.8h-.7zm56.2 0h15.5c.6 0 1.2-.3 1.5-.9l10.2-18.5c.5-.9-.1-2-1.2-2H69.5c-.6 0-1.1.3-1.4.8L57.2 81.5c-.5.8.1 1.8 1 1.8h.4z"/>
          </svg>
          Zenn
        </a>
        <a
          href={LINKS.qiita}
          target="_blank"
          rel="noopener noreferrer"
          class="inline-flex items-center gap-2 px-4 py-2 border border-light-border dark:border-dark-border hover:border-accent-500 dark:hover:border-accent-500 rounded-lg transition-colors"
        >
          <svg class="w-5 h-5" viewBox="0 0 24 24" fill="currentColor">
            <path d="M12 0C5.373 0 0 5.373 0 12s5.373 12 12 12 12-5.373 12-12S18.627 0 12 0zm0 2.824a9.176 9.176 0 110 18.352 9.176 9.176 0 010-18.352zm3.528 4.235a3.529 3.529 0 00-6.588 1.765 3.529 3.529 0 003.06 3.498V16.94h1.176v-4.618a3.53 3.53 0 002.352-5.263z"/>
          </svg>
          Qiita
        </a>
      </div>
    </div>

    <!-- Key Achievements -->
    <section class="mb-12">
      <h2 class="font-display text-2xl font-bold mb-6 pb-2 border-b border-light-border dark:border-dark-border">
        Key Achievements
      </h2>
      <div class="grid gap-4 md:grid-cols-2">
        {
          achievements.map((achievement) => (
            <div class="flex items-start gap-3 p-4 rounded-lg bg-light-surface dark:bg-dark-surface border border-light-border dark:border-dark-border">
              <svg class="w-5 h-5 text-accent-500 mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4M7.835 4.697a3.42 3.42 0 001.946-.806 3.42 3.42 0 014.438 0 3.42 3.42 0 001.946.806 3.42 3.42 0 013.138 3.138 3.42 3.42 0 00.806 1.946 3.42 3.42 0 010 4.438 3.42 3.42 0 00-.806 1.946 3.42 3.42 0 01-3.138 3.138 3.42 3.42 0 00-1.946.806 3.42 3.42 0 01-4.438 0 3.42 3.42 0 00-1.946-.806 3.42 3.42 0 01-3.138-3.138 3.42 3.42 0 00-.806-1.946 3.42 3.42 0 010-4.438 3.42 3.42 0 00.806-1.946 3.42 3.42 0 013.138-3.138z" />
              </svg>
              <span class="text-sm">{achievement}</span>
            </div>
          ))
        }
      </div>
    </section>

    <!-- Skills -->
    <section class="mb-12">
      <h2 class="font-display text-2xl font-bold mb-6 pb-2 border-b border-light-border dark:border-dark-border">
        Skills
      </h2>
      <div class="grid gap-6 md:grid-cols-2 lg:grid-cols-3">
        {
          Object.entries(skills).map(([category, { items, years }]) => (
            <div class="p-4 rounded-lg bg-light-surface dark:bg-dark-surface border border-light-border dark:border-dark-border">
              <div class="flex items-center justify-between mb-3">
                <h3 class="font-display font-semibold text-accent-500">{category}</h3>
                <span class="text-xs px-2 py-1 bg-accent-500/10 text-accent-500 rounded">{years} years</span>
              </div>
              <div class="flex flex-wrap gap-2">
                {items.map((item) => (
                  <span class="px-2 py-1 text-xs bg-light-border/50 dark:bg-dark-border/50 rounded">
                    {item}
                  </span>
                ))}
              </div>
            </div>
          ))
        }
      </div>
    </section>

    <!-- Experience -->
    <section class="mb-12">
      <h2 class="font-display text-2xl font-bold mb-6 pb-2 border-b border-light-border dark:border-dark-border">
        Experience
      </h2>
      <div class="space-y-8">
        {
          experiences.map((exp) => (
            <div class="relative pl-6 border-l-2 border-light-border dark:border-dark-border">
              <div class="absolute -left-[9px] top-0 w-4 h-4 rounded-full bg-accent-500"></div>
              <div class="flex flex-wrap items-baseline justify-between gap-2 mb-2">
                <h3 class="font-display font-semibold text-lg">{exp.company}</h3>
                <span class="text-sm text-light-muted dark:text-dark-muted">{exp.period}</span>
              </div>
              <p class="text-accent-500 font-medium mb-1">{exp.role}</p>
              <p class="text-sm text-light-muted dark:text-dark-muted mb-3">{exp.location}</p>
              <ul class="space-y-1 mb-3">
                {exp.highlights.map((highlight) => (
                  <li class="flex items-start gap-2 text-sm text-light-muted dark:text-dark-muted">
                    <span class="text-accent-500 mt-1">â€¢</span>
                    {highlight}
                  </li>
                ))}
              </ul>
              {exp.tech && (
                <div class="flex flex-wrap gap-1">
                  {exp.tech.map((t) => (
                    <span class="px-2 py-0.5 text-xs bg-accent-500/10 text-accent-500 rounded">
                      {t}
                    </span>
                  ))}
                </div>
              )}
            </div>
          ))
        }
      </div>
    </section>

    <!-- Certifications -->
    <section>
      <h2 class="font-display text-2xl font-bold mb-6 pb-2 border-b border-light-border dark:border-dark-border">
        Certifications
      </h2>
      <div class="space-y-4">
        {
          certifications.map((cert) => (
            <div class="flex items-center gap-3">
              <svg class="w-5 h-5 text-accent-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4M7.835 4.697a3.42 3.42 0 001.946-.806 3.42 3.42 0 014.438 0 3.42 3.42 0 001.946.806 3.42 3.42 0 013.138 3.138 3.42 3.42 0 00.806 1.946 3.42 3.42 0 010 4.438 3.42 3.42 0 00-.806 1.946 3.42 3.42 0 01-3.138 3.138 3.42 3.42 0 00-1.946.806 3.42 3.42 0 01-4.438 0 3.42 3.42 0 00-1.946-.806 3.42 3.42 0 01-3.138-3.138 3.42 3.42 0 00-.806-1.946 3.42 3.42 0 010-4.438 3.42 3.42 0 00.806-1.946 3.42 3.42 0 013.138-3.138z" />
              </svg>
              <div>
                <p class="font-medium">{cert.name}</p>
                <p class="text-sm text-light-muted dark:text-dark-muted">{cert.issuer}</p>
              </div>
            </div>
          ))
        }
      </div>
    </section>
  </div>
</BaseLayout>
