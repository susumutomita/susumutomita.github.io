---
import BaseLayout from "../../layouts/BaseLayout.astro";
import { LINKS } from "../../lib/constants";

const quickFacts = [
  { value: "18+", label: "年のIT経験", icon: "calendar" },
  { value: "2,000+", label: "人のエンジニアを育成", icon: "users" },
  { value: "100万+", label: "台のIoTデバイス", icon: "chip" },
  { value: "80%+", label: "のテスト自動化率", icon: "check" },
];

const skills = [
  {
    category: "ブロックチェーン & Web3",
    icon: "cube",
    items: ["Solidity", "Ethereum", "Starknet", "Cairo", "スマートコントラクト", "JPKI"],
  },
  {
    category: "クラウド & インフラ",
    icon: "cloud",
    items: ["AWS", "GCP", "Terraform", "Docker", "Kubernetes", "CI/CD"],
  },
  {
    category: "バックエンド開発",
    icon: "server",
    items: ["Python", "Go", "Node.js", "TypeScript", "REST APIs", "GraphQL"],
  },
  {
    category: "フロントエンド & UI",
    icon: "window",
    items: ["React", "Next.js", "Astro", "Tailwind CSS", "Solid.js"],
  },
  {
    category: "品質エンジニアリング",
    icon: "shield",
    items: ["テスト自動化", "CI/CDテスト", "パフォーマンステスト", "セキュリティ監査"],
  },
  {
    category: "AI & オートメーション",
    icon: "sparkles",
    items: ["Claude", "Amazon Bedrock", "LangChain", "RAG", "ラボ自動化"],
  },
];

const experiences = [
  {
    company: "株式会社デンソー",
    role: "アジャイルコーチ",
    type: "業務委託",
    period: "2026.1 - 現在",
    description: "開発チーム全体のアジャイル変革とエンジニアリング文化の改善をサポート。",
    highlight: true,
  },
  {
    company: "Logomix Inc.",
    role: "ソフトウェアエンジニア",
    type: "ラボ自動化 / SRE",
    period: "2025.6 - 現在",
    description: "完全自動化されたiPS細胞培養システムを構築。Hamilton STAR分注ロボットとインキュベーター、観察装置の統合。",
    highlight: true,
  },
  {
    company: "MynaWallet Inc.",
    role: "ソフトウェアエンジニア",
    type: "Web3 / インフラ",
    period: "2025.8 - 現在",
    description: "日本のJPKI（公開鍵基盤）を使用したWeb3ウォレットのインフラ設計とセキュリティ監査。",
    highlight: true,
  },
  {
    company: "株式会社デンソー",
    role: "ソフトウェアアーキテクト / クラウドリード",
    period: "2018.10 - 2025.12",
    description: "デンソー「ソフトウェアソムリエ」制度で初のクラウド/ITソフトウェアアーキテクト認定。10万〜100万台のデバイスを管理するIoTサービス向けAWSインフラを設計。Cloud Tech Friends（CCoE）コミュニティを創設。",
    achievements: ["初のソフトウェアアーキテクト認定", "2,000人以上のエンジニアとCCoE", "100万台以上の接続デバイス"],
  },
  {
    company: "WHILL Inc.",
    role: "ソフトウェアエンジニア",
    type: "モビリティプラットフォーム",
    period: "2021.9 - 2022.4",
    description: "空港での車椅子シェアリングサービス向けクラウドアプリケーションを開発。SORACOMとAWSを使用したリアルタイムデータパイプラインを構築。",
  },
  {
    company: "Hitachi Vantara (US)",
    role: "スペシャリストソフトウェアQA",
    period: "2017.2 - 2018.8",
    description: "アメリカでのQA経験。Lumada IoTプラットフォームのテスト自動化。Lumadaと産業用プリンターを接続するPoC（概念実証）をリード。",
    achievements: ["米国でのQA経験", "Lumada IoTプラットフォーム"],
  },
  {
    company: "株式会社日立製作所",
    role: "QAエンジニア / テクニカルリード",
    period: "2006.4 - 2017.1",
    description: "銀行ATMや鉄道ICカードなどのミッションクリティカルシステムで使用されるJP1 Performance Managementのテスト自動化フレームワークをゼロから構築。Hitachi Data SystemsでプリンシパルQAを担当。",
    achievements: ["テスト自動化フレームワークをゼロから構築", "80%以上のテストカバレッジ", "ミッションクリティカルシステムのQA"],
  },
];

const certifications = [
  "デンソー ソフトウェアソムリエ - クラウド/ITソフトウェアアーキテクト（初認定者）",
  "AWS ソリューションアーキテクト",
  "認定スクラムマスター",
];
---

<BaseLayout
  title="自己紹介 - 冨田 晋"
  description="冨田 晋について - クラウドインフラ、ブロックチェーン、品質エンジニアリングで18年以上の経験を持つソフトウェアアーキテクト。"
>
  <div class="max-w-5xl mx-auto px-4 sm:px-6 lg:px-8 py-16 md:py-24">
    <!-- Hero Section -->
    <div class="mb-16">
      <div class="flex flex-col md:flex-row md:items-center gap-8 mb-8">
        <div class="flex-1">
          <p class="text-accent-500 font-medium mb-2">はじめまして</p>
          <h1 class="font-display text-4xl md:text-5xl font-bold mb-4">冨田 晋</h1>
          <p class="text-xl text-light-muted dark:text-dark-muted mb-4">
            ソフトウェアエンジニア
          </p>
          <p class="text-light-muted dark:text-dark-muted max-w-2xl">
            スケーラブルなシステムの構築とエンジニアリング文化の醸成に取り組んでいます。ミッションクリティカルなエンタープライズシステムから最先端のブロックチェーン研究まで、複雑な技術と実用的なソリューションの架け橋となっています。
          </p>
        </div>
      </div>

      <!-- Quick Facts -->
      <div class="grid grid-cols-2 md:grid-cols-4 gap-4">
        {quickFacts.map((fact) => (
          <div class="p-4 rounded-lg border border-light-border dark:border-dark-border text-center">
            <div class="text-2xl md:text-3xl font-bold text-accent-500 mb-1">{fact.value}</div>
            <div class="text-sm text-light-muted dark:text-dark-muted">{fact.label}</div>
          </div>
        ))}
      </div>
    </div>

    <!-- What I Do -->
    <section class="mb-16">
      <h2 class="font-display text-2xl font-bold mb-6">専門分野</h2>
      <div class="grid gap-6 md:grid-cols-2">
        <div class="p-6 rounded-lg border border-light-border dark:border-dark-border">
          <div class="flex items-center gap-3 mb-3">
            <div class="p-2 rounded-lg bg-accent-500/10">
              <svg class="w-5 h-5 text-accent-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10" />
              </svg>
            </div>
            <h3 class="font-display font-semibold">クラウドアーキテクチャ</h3>
          </div>
          <p class="text-sm text-light-muted dark:text-dark-muted">
            大規模IoTサービス向けAWSインフラの設計・運用。10万台から100万台以上の接続デバイスを高可用性で管理。
          </p>
        </div>

        <div class="p-6 rounded-lg border border-light-border dark:border-dark-border">
          <div class="flex items-center gap-3 mb-3">
            <div class="p-2 rounded-lg bg-hybrid-cyan/10">
              <svg class="w-5 h-5 text-hybrid-brightCyan" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4" />
              </svg>
            </div>
            <h3 class="font-display font-semibold">ブロックチェーン & Web3</h3>
          </div>
          <p class="text-sm text-light-muted dark:text-dark-muted">
            分散システムの研究開発。現在はZeroKey（閾値暗号）とJPKIベースのWeb3インフラに取り組んでいます。
          </p>
        </div>

        <div class="p-6 rounded-lg border border-light-border dark:border-dark-border">
          <div class="flex items-center gap-3 mb-3">
            <div class="p-2 rounded-lg bg-hybrid-green/10">
              <svg class="w-5 h-5 text-hybrid-brightGreen" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" />
              </svg>
            </div>
            <h3 class="font-display font-semibold">エンジニアリング文化</h3>
          </div>
          <p class="text-sm text-light-muted dark:text-dark-muted">
            デンソーグループ全体で2,000人以上のエンジニアが参加するCloud Tech Friends（CCoE）を創設。エンタープライズ規模でのクラウド普及と知識共有を推進。
          </p>
        </div>

        <div class="p-6 rounded-lg border border-light-border dark:border-dark-border">
          <div class="flex items-center gap-3 mb-3">
            <div class="p-2 rounded-lg bg-hybrid-magenta/10">
              <svg class="w-5 h-5 text-hybrid-brightMagenta" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" />
              </svg>
            </div>
            <h3 class="font-display font-semibold">品質エンジニアリング</h3>
          </div>
          <p class="text-sm text-light-muted dark:text-dark-muted">
            銀行ATMや鉄道ICカードなどのミッションクリティカルシステム向けに、80%以上のカバレッジを達成するテスト自動化フレームワークをゼロから構築。日米両方でのQA経験。
          </p>
        </div>
      </div>
    </section>

    <!-- Skills -->
    <section class="mb-16">
      <h2 class="font-display text-2xl font-bold mb-8">スキル & 技術</h2>
      <div class="grid gap-6 md:grid-cols-2 lg:grid-cols-3">
        {skills.map((skill) => (
          <div class="p-5 rounded-lg border border-light-border dark:border-dark-border hover:border-accent-500/50 transition-colors">
            <h3 class="font-display font-semibold mb-3 text-accent-500">
              {skill.category}
            </h3>
            <div class="flex flex-wrap gap-2">
              {skill.items.map((item) => (
                <span class="px-2 py-1 text-xs bg-light-border/50 dark:bg-dark-border/50 rounded">
                  {item}
                </span>
              ))}
            </div>
          </div>
        ))}
      </div>
    </section>

    <!-- Experience Timeline -->
    <section class="mb-16">
      <h2 class="font-display text-2xl font-bold mb-8">職歴</h2>

      <!-- Current Roles -->
      <div class="mb-8">
        <h3 class="text-sm font-medium text-accent-500 uppercase tracking-wider mb-4">現在</h3>
        <div class="grid gap-4 md:grid-cols-3">
          {experiences.filter(e => e.highlight).map((exp) => (
            <div class="p-5 rounded-lg border-2 border-accent-500/30 bg-accent-500/5">
              <div class="text-xs text-light-muted dark:text-dark-muted mb-2">{exp.period}</div>
              <h4 class="font-display font-semibold mb-1">{exp.company}</h4>
              <p class="text-sm text-accent-500 mb-2">{exp.role}</p>
              {exp.type && <p class="text-xs text-light-muted dark:text-dark-muted mb-2">{exp.type}</p>}
              <p class="text-sm text-light-muted dark:text-dark-muted">{exp.description}</p>
            </div>
          ))}
        </div>
      </div>

      <!-- Past Experience -->
      <div>
        <h3 class="text-sm font-medium text-light-muted dark:text-dark-muted uppercase tracking-wider mb-4">過去の経歴</h3>
        <div class="space-y-4">
          {experiences.filter(e => !e.highlight).map((exp) => (
            <div class="p-5 rounded-lg border border-light-border dark:border-dark-border">
              <div class="flex flex-wrap items-baseline justify-between gap-2 mb-2">
                <div>
                  <h4 class="font-display font-semibold">{exp.company}</h4>
                  <p class="text-sm text-accent-500">{exp.role}</p>
                </div>
                <span class="text-sm text-light-muted dark:text-dark-muted">{exp.period}</span>
              </div>
              <p class="text-sm text-light-muted dark:text-dark-muted mb-2">{exp.description}</p>
              {exp.achievements && (
                <div class="flex flex-wrap gap-2">
                  {exp.achievements.map((achievement) => (
                    <span class="inline-flex items-center gap-1 px-2 py-0.5 text-xs bg-hybrid-green/10 text-hybrid-brightGreen rounded">
                      <svg class="w-3 h-3" fill="currentColor" viewBox="0 0 20 20">
                        <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" />
                      </svg>
                      {achievement}
                    </span>
                  ))}
                </div>
              )}
            </div>
          ))}
        </div>
      </div>
    </section>

    <!-- Certifications -->
    <section class="mb-16">
      <h2 class="font-display text-2xl font-bold mb-6">資格</h2>
      <div class="grid gap-3">
        {certifications.map((cert) => (
          <div class="flex items-center gap-3 p-4 rounded-lg border border-light-border dark:border-dark-border">
            <svg class="w-5 h-5 text-hybrid-brightYellow flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
              <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
            </svg>
            <span class="text-sm">{cert}</span>
          </div>
        ))}
      </div>
    </section>

    <!-- Technical Writing -->
    <section class="mb-16">
      <h2 class="font-display text-2xl font-bold mb-6">技術記事</h2>
      <div class="grid gap-4 md:grid-cols-2">
        <a
          href={LINKS.zenn}
          target="_blank"
          rel="noopener noreferrer"
          class="p-6 rounded-lg border border-light-border dark:border-dark-border hover:border-accent-500 dark:hover:border-accent-500 transition-colors group"
        >
          <div class="flex items-center gap-3 mb-2">
            <svg class="w-6 h-6 text-accent-500" viewBox="0 0 88.3 88.3" fill="currentColor">
              <path d="M2.4 83.3h17c.9 0 1.7-.5 2.2-1.2L68.4 5.2c.6-1-.1-2.2-1.3-2.2H51.6c-.8 0-1.5.4-1.9 1.1L2.1 81.5c-.4.8.1 1.8 1 1.8h-.7zm56.2 0h15.5c.6 0 1.2-.3 1.5-.9l10.2-18.5c.5-.9-.1-2-1.2-2H69.5c-.6 0-1.1.3-1.4.8L57.2 81.5c-.5.8.1 1.8 1 1.8h.4z"/>
            </svg>
            <h3 class="font-display font-semibold text-lg group-hover:text-accent-500 transition-colors">Zenn</h3>
          </div>
          <p class="text-sm text-light-muted dark:text-dark-muted">日本語の技術記事とチュートリアル</p>
        </a>
        <a
          href={LINKS.qiita}
          target="_blank"
          rel="noopener noreferrer"
          class="p-6 rounded-lg border border-light-border dark:border-dark-border hover:border-accent-500 dark:hover:border-accent-500 transition-colors group"
        >
          <div class="flex items-center gap-3 mb-2">
            <svg class="w-6 h-6 text-accent-500" viewBox="0 0 24 24" fill="currentColor">
              <path d="M12 0C5.373 0 0 5.373 0 12s5.373 12 12 12 12-5.373 12-12S18.627 0 12 0zm0 2.824a9.176 9.176 0 110 18.352 9.176 9.176 0 010-18.352zm3.528 4.235a3.529 3.529 0 00-6.588 1.765 3.529 3.529 0 003.06 3.498V16.94h1.176v-4.618a3.53 3.53 0 002.352-5.263z"/>
            </svg>
            <h3 class="font-display font-semibold text-lg group-hover:text-accent-500 transition-colors">Qiita</h3>
          </div>
          <p class="text-sm text-light-muted dark:text-dark-muted">プログラミングと開発に関する技術記事</p>
        </a>
      </div>
    </section>

    <!-- Contact CTA -->
    <section class="p-8 rounded-xl bg-gradient-to-r from-accent-500/10 via-hybrid-cyan/10 to-hybrid-magenta/10 border border-light-border dark:border-dark-border text-center">
      <h2 class="font-display text-2xl font-bold mb-4">お問い合わせ</h2>
      <p class="text-light-muted dark:text-dark-muted mb-6 max-w-xl mx-auto">
        新しい機会、コラボレーション、技術に関する興味深い会話にいつでもオープンです。
      </p>
      <div class="flex flex-wrap justify-center gap-4">
        <a
          href={LINKS.github}
          target="_blank"
          rel="noopener noreferrer"
          class="inline-flex items-center gap-2 px-6 py-3 border border-light-border dark:border-dark-border hover:border-accent-500 dark:hover:border-accent-500 font-medium rounded-lg transition-colors"
        >
          <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
            <path fill-rule="evenodd" d="M12 2C6.477 2 2 6.484 2 12.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0112 6.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.202 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.943.359.309.678.92.678 1.855 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0022 12.017C22 6.484 17.522 2 12 2z" clip-rule="evenodd" />
          </svg>
          GitHub
        </a>
        <a
          href={LINKS.linkedin}
          target="_blank"
          rel="noopener noreferrer"
          class="inline-flex items-center gap-2 px-6 py-3 border border-light-border dark:border-dark-border hover:border-accent-500 dark:hover:border-accent-500 font-medium rounded-lg transition-colors"
        >
          <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
            <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z" />
          </svg>
          LinkedIn
        </a>
        <a
          href={`mailto:${LINKS.email}`}
          class="inline-flex items-center gap-2 px-6 py-3 bg-accent-500 text-white hover:bg-accent-600 font-medium rounded-lg transition-colors"
        >
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
          </svg>
          お問い合わせ
        </a>
      </div>
    </section>
  </div>
</BaseLayout>
