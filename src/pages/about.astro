---
import BaseLayout from "../layouts/BaseLayout.astro";
import { LINKS } from "../lib/constants";

const skills = [
  { category: "Blockchain", items: ["Solidity", "Ethereum", "Starknet", "Cairo", "Smart Contracts"] },
  { category: "Cloud & DevOps", items: ["AWS", "GCP", "Terraform", "Docker", "Kubernetes", "CI/CD"] },
  { category: "Backend", items: ["Python", "Go", "Node.js", "TypeScript", "REST APIs", "GraphQL"] },
  { category: "Frontend", items: ["React", "Next.js", "Astro", "Tailwind CSS", "TypeScript"] },
  { category: "QA & Test Automation", items: ["JUnit", "Selenium", "TestNG", "REST Assured", "Test Planning"] },
  { category: "AI & Tools", items: ["Claude", "ChatGPT", "Amazon Q", "Amazon Bedrock", "Slack Automation"] },
];

const experiences = [
  {
    company: "DENSO Corporation",
    role: "Agile Coach (Contract)",
    period: "2025.1 - Present",
    description: "Supporting agile transformation and engineering culture improvement across development teams.",
  },
  {
    company: "DENSO Corporation",
    role: "Software Architect / Cloud Lead Engineer",
    period: "2018.10 - 2024.12",
    description: "First certified Cloud/IT Software Architect under DENSO's \"Software Sommelier\" program. Designed AWS infrastructure for IoT services managing 100K-1M devices. Founded Cloud Tech Friends (CCoE) community with 2,000+ engineers.",
  },
  {
    company: "Logomix Inc.",
    role: "Software Engineer (Lab Automation / SRE)",
    period: "2025.6 - Present",
    description: "Building fully automated iPS cell cultivation system. Integrating Hamilton STAR liquid handling robots with incubators and observation devices. Implementing SRE practices.",
  },
  {
    company: "MynaWallet Inc.",
    role: "Software Engineer (Web3 / Infrastructure)",
    period: "2025.8 - Present",
    description: "Infrastructure design and security audit for Web3 wallet using Japan's JPKI. Built cloud architecture for cryptographic signing and authentication.",
  },
  {
    company: "WHILL Inc.",
    role: "Software Engineer (Mobility Platform)",
    period: "2021.9 - 2022.4",
    description: "Developed cloud application for wheelchair sharing service. Built real-time data pipeline using SORACOM and AWS.",
  },
  {
    company: "Hitachi Vantara",
    role: "Specialist Software QA / Automation Engineer",
    period: "2017.2 - 2018.8",
    description: "QA and test automation for Lumada IoT platform. Led proof-of-concept connecting Lumada with industrial printers.",
  },
  {
    company: "Hitachi, Ltd.",
    role: "QA Engineer / Technical Lead",
    period: "2006.4 - 2017.1",
    description: "QA for JP1 Performance Management used in mission-critical systems (banking ATMs, railway IC cards). Principal QA at Hitachi Data Systems with 80%+ test automation.",
  },
];
---

<BaseLayout
  title="About - Susumu Tomita"
  description="About Susumu Tomita - Software Engineer specializing in blockchain, Web3, and cloud technologies."
>
  <div class="max-w-5xl mx-auto px-4 sm:px-6 lg:px-8 py-16 md:py-24">
    <!-- Header -->
    <div class="mb-16">
      <h1 class="font-display text-4xl md:text-5xl font-bold mb-6">About Me</h1>
      <p class="text-lg text-light-muted dark:text-dark-muted max-w-3xl">
        I'm a Software Engineer based in Japan with a passion for building innovative solutions using blockchain,
        Web3, and cloud technologies. I enjoy tackling complex problems and creating tools that make a difference.
      </p>
    </div>

    <!-- Skills -->
    <section class="mb-16">
      <h2 class="font-display text-2xl font-bold mb-8">Skills & Technologies</h2>
      <div class="grid gap-6 md:grid-cols-2">
        {
          skills.map((skill) => (
            <div class="p-6 rounded-lg border border-light-border dark:border-dark-border">
              <h3 class="font-display font-semibold text-lg mb-4 text-accent-500">
                {skill.category}
              </h3>
              <div class="flex flex-wrap gap-2">
                {skill.items.map((item) => (
                  <span class="px-3 py-1 text-sm bg-light-border/50 dark:bg-dark-border/50 rounded-full">
                    {item}
                  </span>
                ))}
              </div>
            </div>
          ))
        }
      </div>
    </section>

    <!-- Experience -->
    <section class="mb-16">
      <h2 class="font-display text-2xl font-bold mb-8">Experience</h2>
      <div class="space-y-6">
        {
          experiences.map((exp) => (
            <div class="p-6 rounded-lg border border-light-border dark:border-dark-border">
              <div class="flex flex-wrap items-baseline justify-between gap-2 mb-2">
                <h3 class="font-display font-semibold text-lg">{exp.company}</h3>
                <span class="text-sm text-light-muted dark:text-dark-muted">{exp.period}</span>
              </div>
              <p class="text-accent-500 font-medium mb-2">{exp.role}</p>
              <p class="text-light-muted dark:text-dark-muted">{exp.description}</p>
            </div>
          ))
        }
      </div>
    </section>

    <!-- Technical Writing -->
    <section class="mb-16">
      <h2 class="font-display text-2xl font-bold mb-8">Technical Writing</h2>
      <div class="grid gap-4 md:grid-cols-2">
        <a
          href={LINKS.zenn}
          target="_blank"
          rel="noopener noreferrer"
          class="p-6 rounded-lg border border-light-border dark:border-dark-border hover:border-accent-500 dark:hover:border-accent-500 transition-colors group"
        >
          <div class="flex items-center gap-3 mb-2">
            <svg class="w-6 h-6 text-accent-500" viewBox="0 0 88.3 88.3" fill="currentColor">
              <path d="M2.4 83.3h17c.9 0 1.7-.5 2.2-1.2L68.4 5.2c.6-1-.1-2.2-1.3-2.2H51.6c-.8 0-1.5.4-1.9 1.1L2.1 81.5c-.4.8.1 1.8 1 1.8h-.7zm56.2 0h15.5c.6 0 1.2-.3 1.5-.9l10.2-18.5c.5-.9-.1-2-1.2-2H69.5c-.6 0-1.1.3-1.4.8L57.2 81.5c-.5.8.1 1.8 1 1.8h.4z"/>
            </svg>
            <h3 class="font-display font-semibold text-lg group-hover:text-accent-500 transition-colors">Zenn</h3>
          </div>
          <p class="text-sm text-light-muted dark:text-dark-muted">Technical articles and tutorials in Japanese</p>
        </a>
        <a
          href={LINKS.qiita}
          target="_blank"
          rel="noopener noreferrer"
          class="p-6 rounded-lg border border-light-border dark:border-dark-border hover:border-accent-500 dark:hover:border-accent-500 transition-colors group"
        >
          <div class="flex items-center gap-3 mb-2">
            <svg class="w-6 h-6 text-accent-500" viewBox="0 0 24 24" fill="currentColor">
              <path d="M12 0C5.373 0 0 5.373 0 12s5.373 12 12 12 12-5.373 12-12S18.627 0 12 0zm0 2.824a9.176 9.176 0 110 18.352 9.176 9.176 0 010-18.352zm3.528 4.235a3.529 3.529 0 00-6.588 1.765 3.529 3.529 0 003.06 3.498V16.94h1.176v-4.618a3.53 3.53 0 002.352-5.263z"/>
            </svg>
            <h3 class="font-display font-semibold text-lg group-hover:text-accent-500 transition-colors">Qiita</h3>
          </div>
          <p class="text-sm text-light-muted dark:text-dark-muted">Technical articles on programming and development</p>
        </a>
      </div>
    </section>

    <!-- Contact CTA -->
    <section class="p-8 rounded-lg border border-light-border dark:border-dark-border text-center">
      <h2 class="font-display text-2xl font-bold mb-4">Let's Connect</h2>
      <p class="text-light-muted dark:text-dark-muted mb-6 max-w-xl mx-auto">
        I'm always interested in new opportunities and collaborations.
        Feel free to reach out through any of these platforms.
      </p>
      <div class="flex flex-wrap justify-center gap-4">
        <a
          href={LINKS.github}
          target="_blank"
          rel="noopener noreferrer"
          class="inline-flex items-center gap-2 px-6 py-3 border border-light-border dark:border-dark-border hover:border-accent-500 dark:hover:border-accent-500 font-medium rounded-lg transition-colors"
        >
          <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
            <path
              fill-rule="evenodd"
              d="M12 2C6.477 2 2 6.484 2 12.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0112 6.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.202 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.943.359.309.678.92.678 1.855 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0022 12.017C22 6.484 17.522 2 12 2z"
              clip-rule="evenodd"></path>
          </svg>
          GitHub
        </a>
        <a
          href={LINKS.linkedin}
          target="_blank"
          rel="noopener noreferrer"
          class="inline-flex items-center gap-2 px-6 py-3 border border-light-border dark:border-dark-border hover:border-accent-500 dark:hover:border-accent-500 font-medium rounded-lg transition-colors"
        >
          <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
            <path
              d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"
            ></path>
          </svg>
          LinkedIn
        </a>
        <a
          href={`mailto:${LINKS.email}`}
          class="inline-flex items-center gap-2 px-6 py-3 bg-accent-500 text-white hover:bg-accent-600 font-medium rounded-lg transition-colors"
        >
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
          </svg>
          Contact Me
        </a>
      </div>
    </section>
  </div>
</BaseLayout>
