---
import BaseLayout from "../layouts/BaseLayout.astro";
import { LINKS } from "../lib/constants";

const projects = [
  {
    title: "ZeroKey",
    description: "A distributed execution model separating instruction, execution, and accountability in blockchain systems.",
    tags: ["Blockchain", "Research", "Smart Contracts"],
    github: "https://github.com/susumutomita/ZeroKeyCI",
    featured: true,
  },
  {
    title: "Slither Claude Integration",
    description: "Integration of Claude AI with Slither static analyzer for enhanced smart contract security analysis.",
    tags: ["Security", "AI", "Solidity"],
    github: "https://github.com/crytic/slither/pull/2842",
  },
  {
    title: "Portfolio Site",
    description: "Personal portfolio website built with Astro, featuring a 3D globe and minimal design.",
    tags: ["Astro", "TypeScript", "UNO CSS"],
    github: "https://github.com/susumutomita/susumutomita.github.io",
  },
];
---

<BaseLayout
  title="Projects - Susumu Tomita"
  description="Open source projects and experiments by Susumu Tomita"
>
  <div class="max-w-5xl mx-auto px-4 sm:px-6 lg:px-8 py-16 md:py-24">
    <!-- Header -->
    <div class="mb-16">
      <h1 class="font-display text-4xl md:text-5xl font-bold mb-6">Projects</h1>
      <p class="text-lg text-light-muted dark:text-dark-muted max-w-3xl">
        A collection of open source projects and experiments. Check out my
        <a href={LINKS.github} target="_blank" rel="noopener noreferrer" class="text-accent-500 hover:text-accent-600">
          GitHub
        </a>
        for more.
      </p>
    </div>

    <!-- Featured Project -->
    {
      projects.filter(p => p.featured).map((project) => (
        <section class="mb-12">
          <div class="p-8 rounded-lg border-2 border-accent-500/50 bg-accent-500/5">
            <span class="text-xs font-medium text-accent-500 uppercase tracking-wider">Featured</span>
            <h2 class="font-display text-2xl font-bold mt-2 mb-3">{project.title}</h2>
            <p class="text-light-muted dark:text-dark-muted mb-4">{project.description}</p>
            <div class="flex flex-wrap gap-2 mb-6">
              {project.tags.map((tag) => (
                <span class="px-3 py-1 text-sm bg-light-border/50 dark:bg-dark-border/50 rounded-full">
                  {tag}
                </span>
              ))}
            </div>
            <div class="flex gap-4">
              {project.github && (
                <a
                  href={project.github}
                  target="_blank"
                  rel="noopener noreferrer"
                  class="inline-flex items-center gap-2 text-sm font-medium text-accent-500 hover:text-accent-600"
                >
                  <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
                    <path
                      fill-rule="evenodd"
                      d="M12 2C6.477 2 2 6.484 2 12.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0112 6.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.202 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.943.359.309.678.92.678 1.855 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0022 12.017C22 6.484 17.522 2 12 2z"
                      clip-rule="evenodd" />
                  </svg>
                  View on GitHub
                </a>
              )}
            </div>
          </div>
        </section>
      ))
    }

    <!-- Other Projects -->
    <section>
      <h2 class="font-display text-2xl font-bold mb-8">All Projects</h2>
      <div class="grid gap-6 md:grid-cols-2">
        {
          projects.filter(p => !p.featured).map((project) => (
            <div class="p-6 rounded-lg border border-light-border dark:border-dark-border hover:border-accent-500 dark:hover:border-accent-500 transition-colors">
              <h3 class="font-display font-semibold text-lg mb-2">{project.title}</h3>
              <p class="text-sm text-light-muted dark:text-dark-muted mb-4">{project.description}</p>
              <div class="flex flex-wrap gap-2 mb-4">
                {project.tags.map((tag) => (
                  <span class="px-2 py-0.5 text-xs bg-light-border/50 dark:bg-dark-border/50 rounded-full">
                    {tag}
                  </span>
                ))}
              </div>
              {project.github && (
                <a
                  href={project.github}
                  target="_blank"
                  rel="noopener noreferrer"
                  class="inline-flex items-center gap-1 text-sm font-medium text-accent-500 hover:text-accent-600"
                >
                  <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
                    <path
                      fill-rule="evenodd"
                      d="M12 2C6.477 2 2 6.484 2 12.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0112 6.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.202 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.943.359.309.678.92.678 1.855 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0022 12.017C22 6.484 17.522 2 12 2z"
                      clip-rule="evenodd" />
                  </svg>
                  GitHub
                </a>
              )}
            </div>
          ))
        }
      </div>
    </section>

    <!-- More Projects CTA -->
    <section class="mt-12 text-center">
      <a
        href={LINKS.github}
        target="_blank"
        rel="noopener noreferrer"
        class="inline-flex items-center gap-2 px-6 py-3 bg-accent-500 hover:bg-accent-600 text-white font-medium rounded-lg transition-colors"
      >
        <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
          <path
            fill-rule="evenodd"
            d="M12 2C6.477 2 2 6.484 2 12.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0112 6.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.202 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.943.359.309.678.92.678 1.855 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0022 12.017C22 6.484 17.522 2 12 2z"
            clip-rule="evenodd"></path>
        </svg>
        View More on GitHub
      </a>
    </section>
  </div>
</BaseLayout>
