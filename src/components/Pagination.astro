---
interface Props {
  currentPage: number;
  totalPages: number;
  prevUrl?: string;
  nextUrl?: string;
}

const { currentPage, totalPages, prevUrl, nextUrl } = Astro.props;
---

<nav
  aria-label="Pagination Navigation"
  class="flex items-center justify-between border-t border-light-border dark:border-dark-border pt-6 mt-8"
>
  <!-- Previous Button -->
  <div>
    {
      prevUrl ? (
        <a
          href={prevUrl}
          class="inline-flex items-center gap-2 px-4 py-2 text-sm font-medium rounded-md border border-light-border dark:border-dark-border hover:border-accent-500 dark:hover:border-accent-500 hover:text-accent-500 transition-colors"
          aria-label="Go to previous page"
        >
          <svg
            xmlns="http://www.w3.org/2000/svg"
            width="16"
            height="16"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
            stroke-linecap="round"
            stroke-linejoin="round"
          >
            <polyline points="15 18 9 12 15 6" />
          </svg>
          <span>Previous</span>
        </a>
      ) : (
        <span
          class="inline-flex items-center gap-2 px-4 py-2 text-sm font-medium rounded-md border border-light-border dark:border-dark-border text-light-muted dark:text-dark-muted cursor-not-allowed opacity-50"
          aria-disabled="true"
        >
          <svg
            xmlns="http://www.w3.org/2000/svg"
            width="16"
            height="16"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
            stroke-linecap="round"
            stroke-linejoin="round"
          >
            <polyline points="15 18 9 12 15 6" />
          </svg>
          <span>Previous</span>
        </span>
      )
    }
  </div>

  <!-- Page Counter -->
  <div class="text-sm text-light-muted dark:text-dark-muted">
    <span class="font-medium text-light-text dark:text-dark-text"
      >Page {currentPage}</span
    >
    <span class="mx-1">of</span>
    <span class="font-medium text-light-text dark:text-dark-text"
      >{totalPages}</span
    >
  </div>

  <!-- Next Button -->
  <div>
    {
      nextUrl ? (
        <a
          href={nextUrl}
          class="inline-flex items-center gap-2 px-4 py-2 text-sm font-medium rounded-md border border-light-border dark:border-dark-border hover:border-accent-500 dark:hover:border-accent-500 hover:text-accent-500 transition-colors"
          aria-label="Go to next page"
        >
          <span>Next</span>
          <svg
            xmlns="http://www.w3.org/2000/svg"
            width="16"
            height="16"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
            stroke-linecap="round"
            stroke-linejoin="round"
          >
            <polyline points="9 18 15 12 9 6" />
          </svg>
        </a>
      ) : (
        <span
          class="inline-flex items-center gap-2 px-4 py-2 text-sm font-medium rounded-md border border-light-border dark:border-dark-border text-light-muted dark:text-dark-muted cursor-not-allowed opacity-50"
          aria-disabled="true"
        >
          <span>Next</span>
          <svg
            xmlns="http://www.w3.org/2000/svg"
            width="16"
            height="16"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
            stroke-linecap="round"
            stroke-linejoin="round"
          >
            <polyline points="9 18 15 12 9 6" />
          </svg>
        </span>
      )
    }
  </div>
</nav>
